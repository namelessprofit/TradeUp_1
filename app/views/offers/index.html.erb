<h2 class="text-center">Requested Trades</h2>
<div class="row">
  <div class="col-xs-4">
    <h3 class="text-center">Person you asked</h3>
  </div>
  <div class="col-xs-4">
    <h3 class="text-center">Item you want</h3>
  </div>
  <div class="col-xs-4">
    <h3 class="text-center">Item you offered</h3>
  </div>
</div>

<br/>
<div class="row">
  <hr/>
  <% @offers.each do |offer|%>
  <% @item = Item.find_by_id(offer.requested_item_id)%>
  <% @myitem = Item.find_by_id(offer.offered_item_id)%>
  <% @user = User.find_by_id(offer.receiver_id.to_s)%>
  <h3><%=link_to delete_offer_path_url(offer), :method=>'delete' do%>
  <span class="cart glyphicon glyphicon-remove" </span> <%end%></h3>
  <div class="col-xs-4 text-center">
    <a href="/users/<%= @item.user.id %>"><img class="item-image" src="<%= @user.image%>" alt="@item.user.username image"></a>
    <h4><%= @user.username%></h4>
    <hr/>
  </div>
  <div class="col-xs-4 text-center">
    <a href="/items/show/<%= @item.id %>"><img class="item-image" src="<%= @item.image %>" alt="<%= @item.title %>"></a>
    <h4><%= @item.title %></h4>
    <hr/>
  </div>
  <div class="col-xs-4 text-center">
    <a href="/items/show/<%= @myitem.id %>"><img class="item-image" src="<%= @myitem.image %>" alt="<%= @myitem.title %>"></a>
    <h4><%= @myitem.title%></h4>
    <hr/>
  </div>
</div>
<%end%>

<%= render 'partials/userBanner' %>
<div class = "container">
<%if logged_in?%>
<%if @user.id == current_user.id%>
  <h3><%= link_to 'View my Favorites', favorites_path_url(@user)%></h3>
  <h3><%= link_to 'View my Requested Trades', offers_path_url(@user)%></h3>
  <h3><%= link_to 'View my Incoming Trades', incoming_offers_path_url(@user)%></h3>
  <h3><%= link_to 'View my Trade History', history_offers_path_url(@user)%></h3>

  <br /><br />
  <h4><%=link_to edit_user_path_url(@user) do%>
    <span class="cart glyphicon glyphicon-pencil"</span>
  <%end%></h4>
<%end%>
<%end%>
<h4>Username:<%=@user.username%></h4>
<h4>Email:<%=@user.email%></h4>
<h4>Location:<%= @user.location.to_s.to_region %></h4>
<%if @user.rating%>
<%@stars =(@user.rating / @user.rating_count).floor%>
<h4>Rating:<%=@stars%></h4>
<%else%>
<h4>Rating: No ratings yet</h4>
<%end%>
<%if logged_in? && @user.id != current_user.id%>
<% @check = false %>
    <%if cookies[:rated]%>
      <% @rated = cookies[:rated].split('.')%>
    <% @rated.each do |id|%>
      <%if id == @user.id.to_s%>
      <%@check = true %>
      <%end%>
    <%end%>
  <%end%>
  <%if @check == false%>
  <p>Rate this user </p>
      <%=form_for @user, :url => "/users/updateRating/"+(@user.id.to_s) do |f| %>
        <%=f.label :rating%>
        <%= f.number_field :rating, :value => 0, :max => 5, :min => 0%>
        <%= f.submit "Go" %>
      <%end%>
  <%else%>
    <p>You have already left a review for this user</p>
  <%end%>
<%end%>

<h2> Items </h2>
  <%if logged_in? && @user.id == current_user.id%>
  <%= link_to new_item_path_url, :method=>'get' do %>
    <span class="cart glyphicon glyphicon-plus"</span><%end%>
  <%end%>
  <div class="slick ">
    <% @items.each do |item| %>
        <h4><%= item.title %></h4>
        <a href="/items/show/<%= item.id %>"><img class="item-image" src="<%= item.image %>" alt="<%= item.title %>"></a>
        <h5><%= item.description %></h5>
        <%if logged_in? && @user.id == current_user.id%>
          <h4 class = "item-trash-link"><%= link_to "/items/destroy/"+(item.id.to_s), :method=>'delete' do %>
          <span class="cart glyphicon glyphicon-trash"</span>
          <%end%></h4>
          <h4 class="link"><%= link_to edit_item_path_url(item), :method=>'get' do %>
          <span class="cart glyphicon glyphicon-pencil"</span>
          <% end %></h4>
        <%end%>

<%end%>
</div>
<br /><br /><br /><br />

</div>
